@model IEnumerable<SpointLiteVersion.Models.vendedores>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-9 modal-content contedor" style="width:90%; margin-left:4%; margin-top:2%;">
            <h2 style="margin-left:30px; margin-bottom:35px;">Vendedores</h2>
            <p>
                <Button onclick="location.href='@Url.Action("Create","vendedores")'" class="btn btn-success crear"><i class="fas fa-plus iconocrear"></i><span class="nuevo">Nuevo</span></Button>

            </p>
           
            <div class="row">
                <div class="modal-content" style="width:88%; margin-left:4%; margin-top:2%;">
                    <table class="table  table-hover t tabla" id="tabla">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.telefono)
                                </th>


                                <th>
                                    @Html.DisplayNameFor(model => model.cedula)
                                </th>





                                <th>@Html.DisplayName("Acciones")</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.telefono)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.cedula)
                                </td>









                                <td>
                                    <a href="@Url.Action("Edit","vendedores",new { id=item.idvendedor})"><i class="fas fa-edit eliminar"></i></a> |
                                    <a href="@Url.Action("Details","vendedores",new { id=item.idvendedor})"><i class="fas fa-info-circle eliminar "></i></a> |
                                    <a href="@Url.Action("Delete","vendedores",new { id=item.idvendedor})"><i class="fas fa-trash-alt eliminar eli"></i></a>


                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tabla').DataTable({
            "pagingType": "full_numbers" // "simple" option for 'Previous' and 'Next' buttons only
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>