@model SpointLiteVersion.Models.tiposproductos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Ajax.BeginForm("Create", "tiposproductos", new AjaxOptions { InsertionMode = InsertionMode.Replace }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="margin-left:15%;">TIPO</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="nombre" class="control-label col-md-2">NOMBRE</label>

                <center>
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                </center>
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="enviar" value="AGREGAR" class="btn btn-success" />
            </div>
        </div>
    </div>
    }


    <script>
            $(document).ready(function () {

                $("#nombre").focus();

                $("#enviar").click(function () {
                    $("#exampleModal").modal("hide");
                });
            });


    </script>
</body>
</html>
