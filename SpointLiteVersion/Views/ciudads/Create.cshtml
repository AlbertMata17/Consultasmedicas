@model SpointLiteVersion.Models.ciudad
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Ajax.BeginForm("Create", "ciudads", new AjaxOptions { InsertionMode = InsertionMode.Replace }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10" style="margin-top:10px;">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-8 col-md-2">
                    <button type="submit" class="btn btn-info" id="enviar" style="margin-bottom:20px;"><i class="fas fa-arrow-circle-left"></i></button>

                </div>
            </div>
        </div>
    }
    <script>

        $(document).ready(function () {

            $("#Nombre").focus();

            $("#enviar").click(function () {
                $("#exampleModal1").modal("hide");
            });
        });


    </script>

</body>
</html>
