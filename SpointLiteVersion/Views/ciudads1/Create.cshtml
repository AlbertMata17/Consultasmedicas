@model SpointLiteVersion.Models.ciudad

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>
    @using (Ajax.BeginForm("Create", "ciudads1", new AjaxOptions { InsertionMode = InsertionMode.Replace}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          <h3 style="margin-left:15%;">CIUDAD</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })

                    <center>@Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })</center>
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="enviar" value="AGREGAR" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
        <script>
            $(document).ready(function () {

                $("#Nombre").focus();

                $("#enviar").click(function () {
                    $("#exampleModal").modal("hide");
                });
            });


        </script>
  
</body>
</html>
