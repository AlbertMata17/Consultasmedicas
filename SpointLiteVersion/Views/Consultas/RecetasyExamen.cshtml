@model IEnumerable<SpointLiteVersion.Models.RecetasyExamenes>

@{
    ViewBag.Title = "RecetasyExamen";
}

<div class="container">
    <div class="row">
        <div class="col-md-9 modal-content contedor" style="width:90%; margin-left:4%; margin-top:2%;">
            <h2 style="margin-left:30px; margin-bottom:35px;">Recetas y Exámenes</h2>


            <div class="row">
                <div class="modal-content" style="width:88%; margin-left:4%; margin-top:2%;">
                    <table class="table  table-hover t tabla" id="tabla">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.paciente.nombre)
                                </th>
                                <th>ACCIONES</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tipo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.paciente.nombre)
                                </td>
                                <td>
                                    <a href="@Url.Action("Borrar","Consultas")" class="facturar" title="Facturar"><i class="fas fa-trash-alt eliminar" style="color:red !important;"></i></a> |
                                    @switch (item.Tipo)
                                    {
                                        case "RECETA":
                                            <a href="@Url.Action("reporteReceta","Consultas",new {id=item.id })" target="_blank"  title="Receta"><i class="fas fa-eye eliminar"></i></a>
                                            break;
                                        case "Examen":
                                            <a href="@Url.Action("reporteExamenes","Consultas",new {id=item.id })" target="_blank"  title="Examen"><i class="fas fa-eye eliminar"></i></a>
                                            break;
                                    }

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tabla').DataTable({
            "pagingType": "full_numbers", // "simple" option for 'Previous' and 'Next' buttons only
            "language": {
                "decimal": "",
                "emptyTable": "NO HAY INFORMACION",
                "info": "MOSTRANDO _START_ A _END_ de _TOTAL_ ENTRADAS",
                "infoEmpty": "MOSTRANDO 0 to 0 of 0 ENTRADAS",
                "infoFiltered": "(FILTRADO DE _MAX_ TOTAL ENTRADAS)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "MOSTRAR _MENU_ ENTRADAS",
                "loadingRecords": "CARGANDO...",
                "processing": "PROCESANDO...",
                "search": "BUSCAR:",
                "zeroRecords": "SIN RESULTADOS ENCONTRADOS",
                "paginate": {
                    "first": "PRIMERO",
                    "last": "ULTIMO",
                    "next": "SIGUIENTE",
                    "previous": "ANTERIOR"
                }
            }
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>
