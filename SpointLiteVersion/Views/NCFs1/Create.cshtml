@model SpointLiteVersion.Models.NCF

@{
    ViewBag.Title = "Create";
}


<div class="container">

    <div class="row">
        <div class="col-md-7 modal-content contedor" style=" margin-left:18%; margin-top:2%;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal" style="margin-top:30px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="margin-left:70px;">
                    <div class="col-md-10">
                        @Html.Label("Nombre Comprobante", new { @class = "control-label col-md-12", @style = "text-align:left;" })
                        @Html.EditorFor(model => model.NombreComp, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreComp, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    @if (@ViewBag.id != null)
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.idNCF)
                    }


                </div>





                <div class="form-group" style="margin-left:70px; margin-bottom:20px;">
                    <div class="col-md-10">
                        @Html.Label("Descripción", new { @class = "control-label col-md-12", @style = "text-align:left;" })

                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group col-md-12" style="margin-left:70%;">
                    <button type="submit" class="btn btn-info" id="crear"><i class="fas fa-arrow-circle-left"></i></button>

                </div>
            </div>
            }
            </div>
        </div>
    </div>
            